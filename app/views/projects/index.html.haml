= render 'menus/settings', current_item: 'projects'

.well
  %h4 Projects
  
  %p= link_to 'Create', "#create-project", class: 'btn', "data-toggle" => "modal"

  #projects-accordion.accordion
    - @projects.each do |project|
      .accordion-group
        .accordion-heading
          %a.accordion-toggle{"data-parent" => "#projects-accordion", "data-toggle" => "collapse", :href => "#project-#{project.id}"}
            %h5= project.name
        .accordion-body.collapse{id: "project-#{project.id}"}
