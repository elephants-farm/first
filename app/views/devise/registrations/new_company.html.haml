.row-fluid
  .span12
    .clear-form
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|

        .form-heading
          = devise_error_messages!
          %h3
            Sign up
        .form-body
          .pair-group

            = f.text_field :company_name, :autofocus => true, class: 'input-block-level', placeholder: 'company name'
            = f.email_field :email, :autofocus => true, class: 'input-block-level', placeholder: :email
            = f.password_field :password, class: 'input-block-level', placeholder: :password
            = f.password_field :password_confirmation, class: 'input-block-level', placeholder: 'password confirmation'

        .form-footer
          = f.submit "Sign up", class: "btn btn-large btn-blue btn-block"
/= render "devise/shared/links"